<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- 设置对象工厂为spring -->
	<constant name="struts.objectFactory" value="spring" />
	
	<package name="userService" namespace="/" extends="struts-default">
		<action name="login" class="userServiceAction" method="login">
			<result name="success">/index.jsp</result>
			<result name="failure">/login.jsp</result>
		</action>
		<action name="logout" class="userServiceAction" method="logout">
			<result name="success">/index.jsp</result>
		</action>
		<action name="changePersonalInfo" class="userServiceAction" method="changePersonalInfo">
			<result name="success">/index.jsp</result>
			<result name="input">/changePersonalInfo.jsp</result>
		</action>
	</package>
	
	
	<!-- 后台管理模块 -->
	<package name="background" namespace="/manage" extends="struts-default">
		<action name="login" class="ssh.action.UserServiceAction" method="login">
			<result name="success">/index.jsp</result>
			<result name="failure">/login.jsp</result>
		</action>
		<action name="changePassword" class="ssh.action.UserServiceAction" method="changePassword">
			<result name="success">/success.jsp</result>
			<result name="input">/changePassword.jsp</result>
		</action>
	</package>
</struts>    
